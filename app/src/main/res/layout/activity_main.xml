<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

<TextView
        android:id="@+id/textname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_name"
        android:textStyle="bold"
        android:textSize="@dimen/header_size"
        android:textColor="@color/txt_color"
        android:layout_marginTop="@dimen/dimen_36dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
/>
    <ImageView
            android:id="@+id/location_img"
            android:src="@drawable/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintLeft_toLeftOf="@id/textname"
            app:layout_constraintTop_toBottomOf="@id/textname"
    />
    <ImageView
            android:id="@+id/hhimage"
            android:src="@drawable/hh"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toRightOf="@id/textname"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/rounded_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/dimen_40dp"
             />
    <TextView
            android:id="@+id/textcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_city"
            android:textSize="@dimen/other_size"
            android:textColor="@color/txt_color"
            app:layout_constraintTop_toBottomOf="@id/textname"
            app:layout_constraintLeft_toRightOf="@id/location_img"
            android:layout_marginTop="@dimen/dimen_16dp"
    />
    <Button
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_follow"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/header_size"
            app:layout_constraintTop_toBottomOf="@id/location_img"
            app:layout_constraintLeft_toLeftOf="@id/textname"
            android:layout_marginTop="@dimen/dimen_40dp"
    />
    <TextView
            android:id="@+id/txt_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34"
            android:textSize="@dimen/header_size"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/follow"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_24dp"
    />
    <TextView
            android:id="@+id/textPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:textSize="@dimen/other_size"
            app:layout_constraintTop_toBottomOf="@id/txt_post"
            app:layout_constraintLeft_toLeftOf="@id/txt_post"
    />
    <TextView
            android:id="@+id/txt_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="453,538"
            android:textStyle="bold"
            android:textSize="@dimen/header_size"
            app:layout_constraintLeft_toRightOf="@id/txt_post"
            app:layout_constraintTop_toBottomOf="@id/follow"
            app:layout_constraintRight_toRightOf="@id/textname"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
    />
    <TextView
            android:id="@+id/textFollower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textSize="@dimen/other_size"
            app:layout_constraintTop_toBottomOf="@id/txt_follower"
            app:layout_constraintLeft_toRightOf="@id/txt_post"
            app:layout_constraintLeft_toLeftOf="@id/txt_follower"

    />
    <ImageView
            android:id="@+id/kkimage"
            android:src="@drawable/kk"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_chainStyle="packed"

            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@id/textFollower"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
    />
    <ImageView
            android:id="@+id/kkkimage"
            android:src="@drawable/kkk"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@id/textFollower"
            app:layout_constraintLeft_toRightOf="@id/kkimage"
            android:layout_width="100dp"
            android:layout_height="100dp"

    />
    <ImageView
            android:id="@+id/zzimage"
            android:src="@drawable/zz"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@id/textFollower"
            app:layout_constraintLeft_toRightOf="@id/kkkimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
    />
    <ImageView
            android:id="@+id/photo"
            android:src="@drawable/photo"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@id/textFollower"
            app:layout_constraintLeft_toRightOf="@id/zzimage"
            android:layout_width="100dp"
            android:layout_height="100dp"

    />
    <ImageView
            android:id="@+id/linkin"
            android:src="@drawable/ic_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/kkimage"
            android:layout_marginLeft="@dimen/dimen_80dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintLeft_toLeftOf="@id/follow"
    />
    <ImageView
            android:id="@+id/facebook"
            android:src="@drawable/ic_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/kkimage"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintLeft_toRightOf="@id/linkin"

    />

    <ImageView
            android:id="@+id/youtube"
            android:src="@drawable/ic_youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/kkimage"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintLeft_toRightOf="@id/facebook"
    />

    <ImageView
            android:id="@+id/cute"
            android:src="@drawable/ic_cute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/kkimage"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintLeft_toRightOf="@id/youtube"
    />
    <ImageView
            android:id="@+id/twitter"
            android:src="@drawable/ic_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/kkimage"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintLeft_toRightOf="@id/cute"
    />
    <ImageView
            android:id="@+id/line"
            android:scaleType="fitXY"
            android:background="@drawable/line"
            app:layout_constraintTop_toBottomOf="@id/linkin"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    />


    <TextView
            android:id="@+id/textAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="@dimen/header_size"
            android:textStyle="bold"
            android:textColor="@color/txt_color"
            app:layout_constraintTop_toBottomOf="@id/linkin"
            android:layout_marginTop="@dimen/dimen_40dp"
            app:layout_constraintLeft_toLeftOf="@id/textname"
    />

    <TextView
            android:id="@+id/text_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_about"
            android:layout_marginLeft="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@id/textAbout"
            app:layout_constraintLeft_toLeftOf="@id/textAbout"

            android:layout_marginTop="@dimen/dimen_16dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>